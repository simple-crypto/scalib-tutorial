                                % Colors

\providecolor{cryptodblue}{rgb}{.2,.2,.4}
\definecolor{cryptolblue}{rgb}{.49,.49,.67}
\definecolor{cryptoorange}{rgb}{.93,.39,.03}
\definecolor{cryptogrey}{rgb}{.753,.753,.753}
\definecolor{cryptolgrey}{rgb}{.8,.8,.8}
% added by Paolo
\definecolor{cryptodarkgreen}{rgb}{120,1,.196}

\setbeamercolor{structure}{fg=cryptodblue}
\setbeamercolor{normal text}{fg=black}
\setbeamercolor{alerted text}{fg=red}
\setbeamercolor{example text}{fg=green!50!black}



                                % Title page
\usetitlepagetemplate{
  \vbox{}
  \vfill
  \begin{centering}
    \Large\structure{{\rmfamily \inserttitle}}\par
    \normalsize\structure{\rmfamily \insertsubtitle}\par
    \vskip1.5em
    \normalsize\structure\insertauthor\vskip1em
      %\vspace{0.5em}
    {\scriptsize\structure\insertinstitute\par}\par\vskip.5em
    %\inserttitlegraphic
  \end{centering}
  }

                                % Navigation bar
\beamertemplatenavigationsymbolsempty

                                % Frametitles
\useframetitletemplate{%
  %\vskip.8em
  {%\leftskip-\beamer@leftmargin plus1fill\advance\leftskip by0.3cm%
   %\rightskip-\beamer@rightmargin plus1fill\advance\rightskip by0.3cm\leavevmode
    \color{structure}\Large{\rmfamily \insertframetitle}\par}
  \vspace{-0.2cm}
  \color{cryptoorange}\rule{\textwidth}{.1mm}
  }

                                % Head
\setbeamertemplate{headline}{%
\leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1.125ex]{palette quaternary}%
    \insertsectionnavigationhorizontal{\paperwidth}{}{\hskip0pt plus1filll}
    \end{beamercolorbox}%
  }
}
